{
  "type": "json_schema",
  "json_schema": {
    "name": "job_post",
    "strict": true,
    "schema": {
      "type": "object",
      "description": "A full job post description",
      "properties": {
        "job_title": {
          "type": "string",
          "description": "The exact job description used in the job posting"
        },
        "company_name": {
          "type": "string"
        },
        "about_company": {
          "type": "string",
          "description": "Information that provides additional context to the applicant about this company as a whole."
        },
        "location": {
          "type": "string"
        },
        "salary": {
          "type": "string"
        },
        "full_time_or_part_time": {
          "type": "string"
        },
        "job_description_bullet_points": {
          "description": "Job requirements and qualifications",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "job_title",
        "company_name",
        "about_company",
        "location",
        "salary",
        "full_time_or_part_time",
        "job_description_bullet_points"
      ],
      "additionalProperties": false
    }
  }
}
